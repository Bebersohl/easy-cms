doctype html
include ./mixins.pug
html
  head
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tachyons/4.11.1/tachyons.min.css")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/quill/1.3.6/quill.snow.min.css")
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.6.3/css/solid.css', integrity='sha384-+0VIRx+yz1WBcCTXBkVQYIBVNEFH1eP6Zknm16roZCyeNg2maWEpk/l/KsyFKs7G', crossorigin='anonymous')
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.6.3/css/fontawesome.css', integrity='sha384-jLuaxTTBR42U2qJ/pm4JRouHkEDHkVqH0T1nyQXn1mZ7Snycpf6Rl25VBNthU4z0', crossorigin='anonymous')
    script(src="https://cdnjs.cloudflare.com/ajax/libs/quill/1.3.6/quill.min.js")
    style.
      body {
        font-family: 'Roboto', sans-serif;
      }
    title simple cms
  body.mt5
    nav.ph4.h3.w-100.fixed.top-0.left-0.ttu.tracked.bb.b--light-gray.bg-white
      ul.flex.items-center.h-100.list.ma0.pv3.ph0
        li.mr4
          a(href='/cms').no-underline.dark-gray.fw6.f6 Home
        each modelArr in navigation
          li.mr4
            a(href=`/cms/${modelArr[0]}`).no-underline.dark-gray.fw6.f6 #{modelArr[0]}

    if secondaryNavigation && secondaryNavigation.length
      nav.bb.b--light-gray.pv2.ph4
        ul.flex.list.ma0.pa0
          each modelName in secondaryNavigation
            li.mr4
              a(href=`/cms/${modelName}`)= modelName

    .ph4.pt3
      block content
      script(defer)
        include ./scripts/quill-editor.js
        include ./scripts/array-add-item.js
        include ./scripts/list-page.js
        include ./scripts/select.js